{
    "version": "2.0.0",  // 任务配置的版本
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ 生成活动文件",  // 与launch中的preLaunchTask完全一致
            "command": "E://MSYS//mingw64//bin//g++.exe",  // 与gdb同属ucrt64环境（统一工具链）
            "args": [
                "-fdiagnostics-color=always",
                "-g",  // 生成调试信息（必须加，否则无法调试）
                "${file}",  // 编译当前打开的文件
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"  // 输出的可执行文件路径
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ]
}